#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
PATH=`npm bin`:$PATH

BOLD=$(tput bold)
END=$(tput sgr0)

echo "${BOLD}jsonlint${END}"
jsonlint package.json > /dev/null
echo "Good"
echo "${BOLD}jsxhint${END}"
jsxhint
echo "Good"
echo "${BOLD}jscs${END}"
jscs .
echo "Good"
echo "${BOLD}flow${END}"
flow
echo "Good"
