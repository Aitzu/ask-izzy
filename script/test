#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
PATH=`npm bin`:$PATH

export NODE_ENV=production
export PORT=8010
export ISS_URL=http://localhost:5000/

# build assets if this isn't Travis (which has already)
${CI:=false} || ./script/build-assets

mocha --timeout 0 --compilers js:babel/register test/*.js "$@"
